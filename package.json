{
  "name": "openai-responses-mcp",
  "version": "0.7.0",
  "description": "Lightweight MCP server (Responses API core). OpenAI integration + web_search.",
  "type": "module",
  "bin": {
    "openai-responses-mcp": "build/index.js"
  },
  "files": [
    "build",
    "config/config.yaml.example",
    "config/policy.md.example",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "node scripts/clean.js",
    "build:clean": "npm run clean && tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "mcp:stdio": "node build/index.js --stdio",
    "mcp:smoke": "node scripts/mcp-smoke.js",
    "mcp:smoke:ldjson": "node scripts/mcp-smoke-ldjson.js",
    "mcp:smoke:ping": "node scripts/mcp-smoke-ping.js",
    "mcp:quick": "node scripts/mcp-smoke-quick.js",
    "prepublishOnly": "npm run build",
    "test": "npm run build && node scripts/test-tools-list.js && node scripts/test-cancel-noinflight.js && node scripts/test-cancel-during-call.js",
    "test:tools-list": "node scripts/test-tools-list.js",
    "test:cancel-noinflight": "node scripts/test-cancel-noinflight.js",
    "test:cancel-during-call": "node scripts/test-cancel-during-call.js"
  },
  "dependencies": {
    "openai": "^5.10.2",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "tsx": "^4.20.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uchimanajet7/openai-responses-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/uchimanajet7/openai-responses-mcp/issues"
  },
  "homepage": "https://github.com/uchimanajet7/openai-responses-mcp#readme",
  "keywords": [
    "openai",
    "responses-api",
    "mcp",
    "model-context-protocol",
    "stdio",
    "mcp-server",
    "typescript",
    "cli",
    "web-search",
    "codex",
    "claude",
    "code"
  ]
}
